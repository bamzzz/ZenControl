<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.wubydax.romcontrol" >
    <uses-permission android:name="android.permission.WRITE_SETTINGS" />
	<uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
	<uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/Theme.Transparent"

         >
        <activity
            android:name=".MainViewActivity"
            android:label="@string/app_name"
            android:theme="@style/AppTheme">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
	    <activity android:name="com.wubydax.romcontrol.DropdownImage" />
	    <activity android:name="com.wubydax.romcontrol.DropdownHeaderImage" />
	    <activity android:name="com.wubydax.romcontrol.chameleonos.labs.gestureanywhere.GestureAnywhereBuilderActivity" android:theme="@style/AppTheme" />
	    <activity android:name="com.wubydax.romcontrol.chameleonos.labs.gestureanywhere.GestureAnywhereCreateGestureActivity" android:theme="@style/AppTheme" />
    </application>

</manifest>
